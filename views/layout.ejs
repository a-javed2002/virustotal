    <style>
        body {
            font-family: Arial;
        }

        /* Style the tab */
        .tab {
            display: flex;
            justify-content: space-around;
            /* Distribute space evenly between the tab buttons */
            background-color: #f1f1f1;
            padding: 10px;
        }

        /* Style the buttons inside the tab */
        .tab button {
            background-color: inherit;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
            font-size: 17px;
            flex: 1;
            /* Distribute available space equally */
        }

        /* Change background color of buttons on hover */
        .tab button:hover {
            background-color: #ddd;
        }

        /* Create an active/current tablink class */
        .tab button.active {
            background-color: #ccc;
        }

        /* Style the tab content */
        .tabcontent {
            display: none;
            padding: 6px 12px;
            color: white;
        }

        /* Fade in tabs */
        @keyframes fadeEffect {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }
    </style>
</head>

